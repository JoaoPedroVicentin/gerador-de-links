generator client {
  provider = "prisma-client-js"
}

generator erd {
  provider = "prisma-erd-generator"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Link {
  id          String  @id @default(cuid())
  title       String?
  url         String  @unique
  description String?
  name        String?
  image       String?
  icon        String?
  // userId      String

  // user User @relation(fields: [userId], references: [id])
}

model User {
  id String @id @default(cuid())

  name      String
  email     String  @unique
  avatarUrl String?

  //link Link[]
}
